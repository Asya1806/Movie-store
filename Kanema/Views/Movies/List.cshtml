<h1>Все Фильмы</h1>
<h3>@Model.currCategory</h3>
<div class="row mt-5 mb-2">
    @{
        foreach (var movie in Model.AllMovies)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@movie.img" alt="@movie.Name">
                <h2>Фильм: @movie.Name</h2>
                <p>@movie.Year</p>
                <p>@movie.Country</p>
                <p>@movie.Producer</p>
                <p>@movie.Genre</p>
                <p><a class="btn btn-warning" href="#">Подробнее</a></p>

            </div>
            }
        }
</div>
